#!/bin/bash

if [ -z "$1" ]
then
  REPO_SED="s/^git@\(.*\):\(.*\)\.git/https:\/\/\1\/\2/g"
else
  REPO_SED="$1"
fi

URL=$(git remote -v | grep fetch | awk '{print $2}' | sed "${REPO_SED}") 

if [[ $URL == "https"* ]]
then
  echo $URL
else
  echo "Sorry, this script does not support HTTPS repository URLs."
fi

osopen $URL

